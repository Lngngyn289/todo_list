<div class="mt4">
  <div class="row">
    {{#each courses}}
    <div class="col-sm-6 col-lg-4">
      <div class="card card-courses-items" >
        <a href="/courses/{{this.slug}}">
          <img src = "{{this.img}}" class="card-img-top image-course" width = "300px" height="300px">
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <a href="/courses/{{this.slug}}" class="btn btn-primary">Details</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
