<div class="mt-4 container"></div>
  <h3>
    <form method = "POST" action = "/courses/store" enctype="multipart/form-data">
      <div class="mb-3 form-class">
        <label for="name" class="form-label">Name </label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3 form-class">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" class="form-control" id="description" name="description" required></textarea>
      </div>
      <div class="mb-3 form-class">
        <label for="idvideo" class="form-label" >Video</label>
        <input type="text" class="form-control" id="idvideo" name="idvideo">
      </div>
      
      <div class="mb-3 form-class">
        <label for="level" class="form-label">Level</label>
        <input type="text" class="form-control" id="level" name="level">
      </div>

      
      <div class="mb-3 form-class">
        <label for="img" class="form-label" >Image</label>
        <input type="file" class="form-control" id="img" name="img">
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </h3>
</div>